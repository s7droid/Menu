<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10" >

        <com.android.volley.toolbox.NetworkImageView
            android:id="@+id/imageviewMealsDetailsActivity"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="6"
            android:scaleType="centerCrop" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/layoutLarge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp" >

                <com.s7design.menu.views.MenuTextView
                    android:id="@+id/tv1"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/menu_main_orange"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <com.s7design.menu.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityOrderLargePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:textColor="@color/menu_main_orange"
                    android:textSize="17sp" />

                <com.s7design.menu.views.CircleButtonView
                    android:id="@+id/circleButtonViewMinusLarge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/textviewMealDetailsActivityOrderLargeQuantity"
                    android:visibility="invisible" >
                </com.s7design.menu.views.CircleButtonView>

                <com.s7design.menu.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityOrderLargeQuantity"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/circleButtonViewPlusLarge"
                    android:gravity="center"
                    android:textColor="@color/menu_main_orange"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <com.s7design.menu.views.CircleButtonView
                    android:id="@+id/circleButtonViewPlusLarge"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible" >
                </com.s7design.menu.views.CircleButtonView>
            </RelativeLayout>

            <View
                android:id="@+id/viewSeparator"
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:background="@color/menu_main_gray" />

            <RelativeLayout
                android:id="@+id/layoutSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp" >

                <com.s7design.menu.views.MenuTextView
                    android:id="@+id/tv2"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <com.s7design.menu.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityOrderSmallPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="17sp" />

                <com.s7design.menu.views.CircleButtonView
                    android:id="@+id/circleButtonViewMinusSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_toLeftOf="@+id/textviewMealDetailsActivityOrderSmallQuantity"
                    android:visibility="invisible" >
                </com.s7design.menu.views.CircleButtonView>

                <TextView
                    android:id="@+id/textviewMealDetailsActivityOrderSmallQuantity"
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_toLeftOf="@+id/circleButtonViewPlusSmall"
                    android:gravity="center"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

                <com.s7design.menu.views.CircleButtonView
                    android:id="@+id/circleButtonViewPlusSmall"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:visibility="invisible" >
                </com.s7design.menu.views.CircleButtonView>
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginBottom="15dp"
                android:background="@color/menu_main_gray" />

            <com.s7design.menu.views.MenuTextView
                android:id="@+id/textviewMealDetailsActivityDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="3dp"
                android:textColor="@color/menu_main_gray_dark"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <ImageButton
                    android:id="@+id/imagebuttonMealDetailsActivityGetReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@null"
                    android:src="@drawable/button_pen_paper_icon" />

                <com.s7design.menu.views.MenuTextView
                    android:id="@+id/textviewMealDetailsActivityReceiptText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imagebuttonMealDetailsActivityGetReceipt"
                    android:alpha="0.4"
                    android:textColor="@color/menu_main_gray"
                    android:textSize="12sp" />
            </RelativeLayout>

            <com.s7design.menu.views.MenuTextView
                android:id="@+id/textviewMealDetailsActivityIngridients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:textAllCaps="true"
                android:textColor="@color/menu_main_orange"
                android:textSize="16sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10" >

        <ImageView
            android:id="@+id/imageviewMealsDetailsActivity"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_weight="6"
            android:scaleType="centerCrop"
            android:src="@drawable/meal_category_02" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/tv1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="ORDER LARGE"
                    android:textColor="@color/menu_main_orange"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textviewMealDetailsActivityOrderLargePrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv1"
                    android:text="12.30e"
                    android:textColor="@color/menu_main_orange" />

                <ImageButton
                    android:id="@+id/imagebuttonMealDetailsActivityOrderLargeRemoveOrder"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textviewMealDetailsActivityOrderLargeQuantity" />

                <TextView
                    android:id="@+id/textviewMealDetailsActivityOrderLargeQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imagebuttonMealDetailsActivityOrderLargeAddOrder"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/menu_main_orange" />

                <ImageButton
                    android:id="@+id/imagebuttonMealDetailsActivityOrderLargeAddOrder"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:alpha="0.5"
                android:background="@color/menu_main_gray" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp" >

                <TextView
                    android:id="@+id/tv2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:text="ORDER LARGE"
                    android:textColor="@color/menu_main_gray"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textviewMealDetailsActivityOrderSmallPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="20dp"
                    android:layout_toRightOf="@+id/tv2"
                    android:text="8.00e"
                    android:textColor="@color/menu_main_gray" />

                <ImageButton
                    android:id="@+id/imagebuttonMealDetailsActivityOrderSmallRemoveOrder"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/textviewMealDetailsActivityOrderSmallQuantity"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/textviewMealDetailsActivityOrderSmallQuantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imagebuttonMealDetailsActivityOrderSmallAddOrder"
                    android:gravity="center"
                    android:text="2"
                    android:textColor="@color/menu_main_orange"
                    android:visibility="invisible" />

                <ImageButton
                    android:id="@+id/imagebuttonMealDetailsActivityOrderSmallAddOrder"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginBottom="10dp"
                android:alpha="0.5"
                android:background="@color/menu_main_gray" />

            <TextView
                android:id="@+id/textviewMealDetailsActivityDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tomato soup with some very special ingridients in it."
                android:textColor="@color/menu_main_gray"
                android:textSize="17sp"
                android:textStyle="bold" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp" >

                <ImageButton
                    android:id="@+id/imagebuttonMealDetailsActivityGetReceipt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true" />

                <TextView
                    android:id="@+id/textviewMealDetailsActivityReceiptText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@+id/imagebuttonMealDetailsActivityGetReceipt"
                    android:alpha="0.4"
                    android:text="Tomato soup is a soup made with tomatoes as the primary ingridient. \nIt may be served hot or cold in a bowl."
                    android:textColor="@color/menu_main_gray"
                    android:textSize="12sp" />
            </RelativeLayout>

            <TextView
                android:id="@+id/textviewMealDetailsActivityIngridients"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="tomatoes, OLIVE OIL, CARROTS, ONNIONS, CELERY, BASIL LEAVES, pepper, SALT."
                android:textAllCaps="true"
                android:textColor="@color/menu_main_orange"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</ScrollView>
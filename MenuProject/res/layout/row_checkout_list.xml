<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingBottom="10dp"
    android:paddingTop="10dp" >

    <LinearLayout
        android:id="@+id/layoutName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <com.s7design.menu.views.CircleButtonView
            android:id="@+id/circleButtonViewQty"
            android:layout_width="30dp"
            android:layout_height="30dp" >
        </com.s7design.menu.views.CircleButtonView>

        <com.s7design.menu.views.MenuTextView
            android:id="@+id/textViewName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:ellipsize="end"
            android:singleLine="true"
            android:textColor="@color/menu_main_gray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.s7design.menu.views.MenuTextView
            android:id="@+id/textViewIsSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="@string/misc_is_small"
            android:textColor="@color/menu_main_gray_light"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMinusPlus"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:visibility="gone" >

        <com.s7design.menu.views.CircleButtonView
            android:id="@+id/circleButtonViewMinus"
            android:layout_width="30dp"
            android:layout_height="30dp" >
        </com.s7design.menu.views.CircleButtonView>

        <com.s7design.menu.views.MenuTextView
            android:id="@+id/textViewQty"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:gravity="center"
            android:textColor="@color/menu_main_gray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <com.s7design.menu.views.CircleButtonView
            android:id="@+id/circleButtonViewPlus"
            android:layout_width="30dp"
            android:layout_height="30dp" >
        </com.s7design.menu.views.CircleButtonView>

        <com.s7design.menu.views.MenuButton
            android:id="@+id/buttonDone"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/rounded_orange_button_selector"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:text="@string/checkout_done"
            android:textColor="@drawable/orange_text_selector"
            android:textSize="16sp"
            android:textStyle="bold" />
    </LinearLayout>

    <com.s7design.menu.views.MenuTextView
        android:id="@+id/textViewPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:textColor="@color/menu_main_gray"
        android:textSize="16sp"
        android:textStyle="bold" />

    <com.s7design.menu.views.CircleButtonView
        android:id="@+id/circleButtonViewDel"
        android:layout_width="30dp"
        android:layout_height="30dp" >
    </com.s7design.menu.views.CircleButtonView>

</LinearLayout>
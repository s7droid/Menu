<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_action_bar" >

    <Button
        android:id="@+id/buttonActionBarBack"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:background="@null"
        android:drawablePadding="5dp"
        android:drawableStart="@drawable/icon_left"
        android:gravity="center_vertical|start"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/action_bar_back"
        android:textColor="@color/menu_main_gray" />

    <ImageButton
        android:id="@+id/imageButtonActionBarMenu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:background="@null"
        android:scaleType="centerInside"
        android:src="@drawable/menu_icon" />

    <Button
        android:id="@+id/buttonActionBarForward"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:background="@null"
        android:drawableEnd="@drawable/icon_right"
        android:drawablePadding="5dp"
        android:gravity="center_vertical|end"
        android:paddingEnd="5dp"
        android:paddingStart="5dp"
        android:text="@string/action_bar_tutorial"
        android:textColor="@color/menu_main_gray" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:orientation="vertical" >

    <com.s7design.menu.views.MenuTextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:gravity="center"
        android:text="Order from your table \nwith your phone:"
        android:textSize="20sp" />

    <ImageView
        android:id="@+id/iv1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/buttonuTutorialScreenFirstContinueButton"
        android:layout_below="@+id/tv1"
        android:layout_margin="40dp"
        android:src="@drawable/tutorial_01" />

    <com.s7design.menu.views.MenuButton
        android:id="@+id/buttonuTutorialScreenFirstContinueButton"
        style="@style/Menu_Button_Orange"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="@string/menu_tutorial_screen_button_continue" />

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@android:color/white"
    android:orientation="horizontal"
    android:padding="10dp" >

    <ImageView
        android:id="@+id/imageviewSubMealImage"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:src="@drawable/meal_category_01" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:background="@android:color/white" >

        <TextView
            android:id="@+id/textviewSubMealTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="Garlic Soup"
            android:textColor="@color/menu_main_gray"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textviewSubMealPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textviewSubMealTitle"
            android:layout_marginTop="5dp"
            android:alpha="0.5"
            android:text="7.00e / 12.00e"
            android:textSize="13sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/textviewSubMealPrice"
            android:layout_marginTop="5dp" >

            <Button
                android:id="@+id/buttonSubMealOrderLarge"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="large" />

            <Button
                android:id="@+id/buttonSubMealOrderSmall"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="small" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>